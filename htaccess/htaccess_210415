RewriteEngine On

RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://triathlonresearch.org/$1 [R=301,L]

RewriteCond %{HTTP_HOST} ^www.triathlonresearch\.org$ [NC]
RewriteRule ^(.*)$ https://triathlonresearch.org/$1 [R=301,L]

RewriteCond %{HTTP_HOST} ^triathlonresearch\.org$ [NC]
RewriteRule ^(.+)/$ https://triathlonresearch.org/$1 [R=301,L]

ErrorDocument 403 https://triathlonresearch.com/403
ErrorDocument 404 https://triathlonresearch.com/404
ErrorDocument 500 https://triathlonresearch.com/500
